@model IEnumerable<EmployeesRegister.Models.Employee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<form method="get">
    First name
    <input type="search" name="searchFirstName" /><br />
    Last name
    <input type="search" name="searchLastName" /><br />
    Salary (>=)
    <input type="search" name="searchSalary" /><br />
    Position
    <input type="search" name="searchPosition" /><br />
    Department
    <input type="search" name="searchDepartment" /><br />
    Is a boss
    <input type="checkbox" name="searchBosses" value="Boss" /><br />
    Earns more than average
    <input type="checkbox" name="searchMoreThanAverage" value="MoreThanAverage" /><br />

    <input type="submit" value="Search" />
</form>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<br /><br />
<p>
    Average Salary @Math.Round(Model.Average(m => m.Salary))
</p>
<br /><br />
<table class="table">
    <tr>
        <th>
            First Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Salary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Position)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Company)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Position)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Department)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Company)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
